@model CoreDemoProduct.EntityLayer.Concrete.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<h2>Ürün Güncelleme Sayfası</h2>
@using (Html.BeginForm("UpdateProduct", "Product", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.ProductID)
    @Html.Label("Ürün Adı")
    @Html.TextBoxFor(x=>x.ProductName, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.ProductName)
    <br />
    @Html.Label("Fiyat")
    @Html.TextBoxFor(x=>x.Price, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Price)
    <br />
    @Html.Label("Stok")
    @Html.TextBoxFor(x=>x.Stock, new {@class = "form-control"})
    @Html.ValidationMessageFor(x=>x.Stock)
    <br />
    <button class="btn btn-info">Güncelle</button>
}